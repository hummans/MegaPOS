<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:background="@color/fakewhite"
    tools:context="com.nfortics.megapos.Activities.Login">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="500dp"
        android:layout_height="338dp"
        android:id="@+id/textFieldHolder"
        android:layout_marginTop="214dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">


        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="0"
            android:layout_marginBottom="4dp"
            android:padding="3dp">

            <EditText
                android:drawableLeft="@drawable/www"
                android:drawablePadding="10dp"
                android:background="@color/textColorPrimary"
                android:id="@+id/edtDomainName"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="0dp"
                android:layout_alignParentBottom="true"
                android:padding="10dp"
                android:layout_toLeftOf="@+id/txtozimbo"
                android:layout_toStartOf="@+id/txtozimbo"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:hint="goodbranch"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtozimbo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=".ozinbo.com"
                android:textStyle="italic"
                android:textSize="20dp"
                android:typeface="serif"
                android:textColor="#ff000000"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="35dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:padding="2dp"
                android:layout_marginTop="4dp" />

        </RelativeLayout>

        <EditText
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/useremail"
            android:background="@color/textColorPrimary"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/edtEmail"
            android:hint="Enter Phone Number"
            android:layout_margin="5dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"
            android:textStyle="bold|italic"
            android:typeface="serif"
            android:phoneNumber="true" />

        <EditText
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/locked"
            android:background="@color/textColorPrimary"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:id="@+id/edtPassword"
            android:hint="Enter Password"
            android:layout_margin="5dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"
            android:textStyle="bold|italic"
            android:typeface="serif" />


        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">
            <TextView
                android:layout_alignParentLeft="true"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Forget Password"
                android:id="@+id/txtResetPassword"
                android:typeface="serif"
                android:textStyle="italic"
                android:layout_toLeftOf="@+id/btSignIn"
                android:layout_toStartOf="@+id/btSignIn" />

            <Button

                android:text="Sign In"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:id="@+id/btSignIn"
                android:layout_weight="0.26"
                android:layout_gravity="right"
                android:clickable="true"
                android:elegantTextHeight="true"
                android:paddingLeft="15dp"
                android:paddingTop="15dp"
                android:paddingRight="15dp"
                android:paddingBottom="15dp"
                android:textStyle="normal"
                android:textSize="20dp"
                android:typeface="serif"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>


    </LinearLayout>

</RelativeLayout>
