<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#ffffff" />
            <gradient  android:angle="-90"  android:startColor="#fdfdff" android:endColor="#f0fff4" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#766e4a" />
            <solid  android:color="#8a7246"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />

            <stroke android:width="1dip" android:color="#c5c8c8" />
            <gradient  android:angle="-90"  android:startColor="#eeeeef" android:endColor="#aab5c1b8"  />


        </shape>
    </item>
</selector>