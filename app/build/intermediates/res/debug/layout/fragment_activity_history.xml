<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context="com.nfortics.megapos.Fragments.ActivityHistory">

    <!-- TODO: Update blank fragment layout -->

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/searchMe"
        android:layout_gravity="left|top"
        android:hint="Seach Here" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/listOfActivities"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="10dp"
        android:layout_gravity="center_horizontal|top"
        android:layout_below="@+id/searchMe"
        android:layout_alignRight="@+id/searchMe"
        android:layout_alignEnd="@+id/searchMe"
        android:layout_above="@+id/activitySummary">

    </android.support.v7.widget.RecyclerView>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:id="@+id/activitySummary"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/row1"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="SALES :"
                android:id="@+id/txtSalesLabel"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="  GHS 3000,00000"
                android:id="@+id/txtSalesValue"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/txtSalesLabel"
                android:layout_toEndOf="@+id/txtSalesLabel" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="GHS 450,00,00"
                android:id="@+id/txtCashInValue"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="CASH-IN :"
                android:id="@+id/txtCashInLabel"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/txtCashInValue"
                android:layout_toStartOf="@+id/txtCashInValue"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/row1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/row2"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="BILL PAY : "
                android:id="@+id/txtBillpayLabel"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="GHS 300,00"
                android:id="@+id/txtBillPayValue"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/txtBillpayLabel"
                android:layout_toEndOf="@+id/txtBillpayLabel" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="GHS 23,00,000"
                android:id="@+id/txtCashOutValue"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="CASH-OUT :"
                android:id="@+id/txtCashOutLabel"
                android:layout_alignBottom="@+id/txtCashOutValue"
                android:layout_toLeftOf="@+id/txtCashOutValue"
                android:textStyle="bold"
                android:layout_alignParentTop="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/row3"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/row2"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="AIRTIME : "
                android:id="@+id/txtAirTimeLabel"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="GHS 23,000"
                android:id="@+id/txtAirtimeValue"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/txtAirTimeLabel"
                android:layout_toEndOf="@+id/txtAirTimeLabel" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="GHS 45,00,000"
                android:id="@+id/txtMfinanceValue"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="MFINANCE :"
                android:id="@+id/txtMfinanceLabel"
                android:layout_alignBottom="@+id/txtMfinanceValue"
                android:layout_toLeftOf="@+id/txtMfinanceValue"
                android:layout_toStartOf="@+id/txtMfinanceValue"
                android:textStyle="bold" />
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
